<config>
    <modules>
        <Canvassignages_Product>
            <version>0.1.1</version>
        </Canvassignages_Product>
    </modules>
    <frontend>
        <routers>
            <product>
                <use>standard</use>
                <args>
                    <module>Canvassignages_Product</module>
                    <frontName>canvas-product</frontName>
                </args>
            </product>
        </routers>

        <layout>
            <updates>
                <uploader>
                    <file>canvassignages_product.xml</file>
                </uploader>
            </updates>
        </layout>

    </frontend>   
    <global>
       
        
        <blocks>
            <product>
                <class>Canvassignages_Product_Block</class>
            </product>
        </blocks>
        <helpers>
            <product>
                <class>Canvassignages_Product_Helper</class>
            </product>
        </helpers>
    </global>
</config>
