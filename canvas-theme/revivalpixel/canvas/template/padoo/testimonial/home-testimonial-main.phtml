    <?php
    $stores = $testimonial->getStoreId();
    //print_r($testimonial->getData());
    if (strpos($stores, $storeId) !== false || strpos($stores, 0) !== false || $stores == 0) {
        ?>
        <div class="main-testimonial-box">
            <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12">
                <div class="main-testimonial">
                    <p><?php echo substr($testimonial->getTestimonialText(), 0, 150); ?>...</p>
                    <div class="name"><?php echo $testimonial->getTestimonialName(); ?>, Owner</div>
                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                <?php if($testimonial->getVideoEmbedCode() != "" ) { ?>
                    <div id="testimonial-video"> 
<!--
                        <img src="<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA) . $testimonial->getTestimonialImg() ?>" alt=""> 
-->
