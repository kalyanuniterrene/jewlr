                    </div>
                <?php } else { ?>
					 
                    <div id="testimonial-video"> 

                        <img src="<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_MEDIA) . $testimonial->getTestimonialImg() ?>" alt=""> 

                       
                        <div id="play" style=""></div>
                    </div>
                <?php } ?>
            </div>
        </div>
    <?php } ?>
